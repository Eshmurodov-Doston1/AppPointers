<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dialog_my"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lesson_name"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.05"
            android:text="@string/app_name"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/info"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/lesson_name"
            app:layout_constraintLeft_toLeftOf="@id/lesson_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rating"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:numStars="5"
            android:progressBackgroundTint="#DDD7D7"
            android:theme="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rating_btn"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@id/rating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            android:text="Baxolash"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>